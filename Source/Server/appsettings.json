{
  "Networking": {
    "Port": 7001,
    "MaxConnections": 100
  },
  "Database": {
    "ConnectionString": "Host=localhost;Port=5432;Username=postgres;Password=mirage;Database=mirage",
    "MaxRetries": 3,
    "RetryDelayMs": 1000
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File",
      "Serilog.Enrichers.Thread",
      "Serilog.Enrichers.Environment"
    ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "System": "Information"
      }
    },
    "Enrich": [
      "FromLogContext",
      "WithThreadId",
      "WithMachineName",
      "WithEnvironmentName"
    ],
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/application-.txt",
          "rollingInterval": "Day"
        }
      }
    ]
  }
}