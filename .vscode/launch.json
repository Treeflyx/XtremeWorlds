{
  "version": "0.2.0",
  "configurations": [
    {
      "name": ".NET Debug Client",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build-client",
      "program": "${workspaceFolder}/Build/Client/Client.dll",
      "cwd": "${workspaceFolder}/Build/Client",
      "console": "internalConsole",
      "stopAtEntry": false,
      "env": {
        "DOTNET_ENVIRONMENT": "Development"
      }
    },
    {
      "name": "Attach to Client",
      "type": "coreclr",
      "request": "attach",
      "processName": "Client"
    }
  ]
}
